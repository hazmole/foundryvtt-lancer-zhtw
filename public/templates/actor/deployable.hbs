<form class="{{cssClass}} lancer-sheet" autocomplete="off">
  {{! Sheet Header }}
  <header class="sheet-header card clipped-bot">
    <div class="header-fields">
      <h1 class="charname">
        <input
          class="header-field"
          name="name"
          type="text"
          value="{{actor.name}}"
          placeholder="{{localize 'lancer.placeholder.name'}}"
        />
      </h1>
    </div>
    {{{ref-portrait-img actor.img "img" actor}}}
  </header>

  {{! Sheet Tab Navigation }}
  <nav class="lancer-tabs" data-group="primary">
    <a class="item lancer-tab medium" data-tab="status">{{localize "lancer.sheets.tab.status"}}</a>
    <a class="item lancer-tab medium" data-tab="config">{{localize "lancer.sheets.tab.config"}}</a>
    <a class="item lancer-tab medium" data-tab="effects">{{localize "lancer.sheets.tab.effects_active"}}</a>
    <!--<a class="item lancer-tab medium" data-tab="mech">&lt;FRAME//LOADOUT&gt;</a>-->
  </nav>

  {{! Sheet Body }}
  <section class="sheet-body">
    {{! Active Tab }}
    <div class="tab manage" data-group="primary" data-tab="status">
      <div class="wraprow quadruple">
        {{{stat-edit-max-card (localize "lancer.stats.hp") "mdi mdi-heart-outline" "system.hp.value" "system.hp.max"}}}
        {{{stat-edit-max-card (localize "lancer.stats.heat") "cci cci-heat" "system.heat.value" "system.heat.max"}}}
        {{{stat-edit-rollable-card (localize "lancer.stats.burn") "cci cci-burn" "system.burn"}}}
        {{{stat-edit-card (localize "lancer.stats.oshield") "mdi mdi-shield-star-outline" "system.overshield.value"}}}
        {{#if (eq system.size 0.5)}}
          {{{stat-view-card (localize "lancer.stats.size") "cci cci-size-half" "system.size"}}}
        {{else}}
          {{{stat-view-card (localize "lancer.stats.size") (concat "cci cci-size-" system.size) "system.size"}}}
        {{/if}}
        {{{stat-view-card (localize "lancer.stats.armor") "mdi mdi-shield-outline" "system.armor"}}}
        {{{stat-view-card (localize "lancer.stats.evasion") "cci cci-evasion" "system.evasion"}}}
        {{{stat-view-card (localize "lancer.stats.edef") "cci cci-edef" "system.edef"}}}
        {{{stat-view-card (localize "lancer.stats.speed") "mdi mdi-arrow-right-bold-hexagon-outline" "system.speed"}}}
        {{{stat-view-card (localize "lancer.stats.save") "cci cci-save" "system.save"}}}

        <div class="card clipped full lancer-flow-button-grid">
          <span class="lancer-header lancer-primary submajor">{{localize "lancer.sheets.title.attack_utilities"}}</span>
          <div class="lancer-flow-button-grid">
            {{{flow-button (localize "lancer.sheets.attacks.basic_attack") "BasicAttack"}}}
            {{{flow-button (localize "lancer.sheets.attacks.damage") "Damage"}}}
          </div>
        </div>

        <div class="card clipped full">
          <div class="lancer-header lancer-primary major">
            {{localize "lancer.sheets.title.deployer"}}
          </div>
          {{{deployer-slot "system.owner.value"}}}
        </div>

        {{{textarea-card (localize "lancer.sheets.title.details") "system.detail"}}}
      </div>
    </div>

    {{! Config Tab }}
    <div class="tab manage flexcol" data-group="primary" data-tab="config">
      {{! Frame Stats }}
      <div class="card clipped" style="text-align: left;">
        <span class="lancer-header lancer-primary major" style="text-align: center;">{{localize
            "lancer.sheets.title.base_stats"
          }}</span>
        <div class="card clipped wraprow quadruple">
          <div class="wraprow quadruple">
            <div class="card clipped stat-container">
              <div class="lancer-header lancer-primary">
                <i class="mdi mdi-heart-outline i--m i--light header-icon"> </i>
                <span class="major">{{localize "lancer.stats.max_hp"}}</span>
              </div>
              {{!-- prettier-ignore --}}
              <input class="lancer-input major" {{{getset "system.stats.hp"}}} type="text" data-dtype="String" />
            </div>
            {{{clicker-stat-card (localize "lancer.stats.armor") "mdi mdi-shield-outline" "system.stats.armor" false}}}
            {{{clicker-stat-card (localize "lancer.stats.evasion") "cci cci-evasion" "system.stats.evasion" false}}}
            {{{clicker-stat-card (localize "lancer.stats.edef") "cci cci-edef" "system.stats.edef" false}}}
            {{{clicker-stat-card (localize "lancer.stats.heatcap") "cci cci-heatcap" "system.stats.heatcap" false}}}
            {{{clicker-stat-card (localize "lancer.stats.speed") "mdi mdi-arrow-right-bold-hexagon-outline" "system.stats.speed" false}}}
            {{{clicker-stat-card (localize "lancer.stats.size") "cci cci-hexagon" "system.stats.size" false}}}
            {{{clicker-stat-card (localize "lancer.stats.cost") "cci cci-hexagon" "system.cost" false}}}
          </div>
        </div>
      </div>
    </div>

    <div class="tab effects" data-group="primary" data-tab="effects">
      {{{effect-categories-view actor effect_categories}}}
    </div>
  </section>
</form>