<form class="{{cssClass}} lancer-sheet" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header card clipped-bot">
    <div class="flexcol grow">
      <h1 class="charname"><input class="header-field" name="name" type="text" value="{{item.name}}"
                                  placeholder="{{localize " lancer.placeholder.name"}}" /></h1>
      <div class="flexrow">
        <span>{{ localize "lancer.common-sheet.label.rank" }}:</span>
        {{{l-num-input "system.curr_rank"}}}
      </div>
    </div>
    {{{ ref-portrait-img item.img "img" item}}}
  </header>

  {{!-- Sheet Body --}}
  {{{textarea-card (localize "lancer.common-sheet.label.description") "system.description"}}}

  {{{textarea-card (localize "lancer.common-sheet.label.details") "system.detail"}}}
</form>
